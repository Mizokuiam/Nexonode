{
  "name": "nexonode",
  "displayName": "Nexonode",
  "description": "Interactive Automation Assistant for Code Editors with Premium AI Integration",
  "version": "0.1.1",
  "publisher": "mizokuiam",
  "pricing": "Trial",
  "author": {
    "name": "Nexonode"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mizokuiam/Nexonode"
  },
  "bugs": {
    "url": "https://github.com/Mizokuiam/Nexonode/issues"
  },
  "homepage": "https://mizokuiam.github.io/Nexonode/",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "automation",
    "AI",
    "productivity",
    "code generation",
    "pair programming"
  ],
  "icon": "docs/assets/logo.png",
  "galleryBanner": {
    "color": "#000212",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/Mizokuiam/Nexonode?style=social",
      "href": "https://github.com/Mizokuiam/Nexonode",
      "description": "Star on GitHub"
    },
    {
      "url": "https://img.shields.io/discord/1234567890?style=social",
      "href": "https://discord.gg/8DW735Hn",
      "description": "Join Discord"
    }
  ],
  "activationEvents": [
    "onCommand:nexonode.executeCommand",
    "onCommand:nexonode.validateContext",
    "onCommand:nexonode.configureRules",
    "onCommand:nexonode.showQuickCommands",
    "onCommand:nexonode.activatePremium",
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nexonode.executeCommand",
        "title": "Nexonode: Execute Command"
      },
      {
        "command": "nexonode.validateContext",
        "title": "Nexonode: Validate Context"
      },
      {
        "command": "nexonode.configureRules",
        "title": "Nexonode: Configure Rules"
      },
      {
        "command": "nexonode.showQuickCommands",
        "title": "Nexonode: Show Quick Commands"
      },
      {
        "command": "nexonode.activatePremium",
        "title": "Nexonode: Activate Premium"
      }
    ],
    "configuration": {
      "title": "Nexonode",
      "properties": {
        "nexonode.autoApprove": {
          "type": "array",
          "default": [
            "format",
            "lint"
          ],
          "description": "Commands that will be executed without confirmation"
        },
        "nexonode.requireApproval": {
          "type": "array",
          "default": [
            "delete",
            "refactor"
          ],
          "description": "Commands that require explicit approval"
        },
        "nexonode.blocked": {
          "type": "array",
          "default": [
            "rm -rf",
            "sudo"
          ],
          "description": "Commands that are blocked from execution"
        },
        "nexonode.integrations": {
          "type": "object",
          "default": {
            "enabled": [
              "github",
              "slack"
            ],
            "webhookUrls": {}
          },
          "description": "External integration settings"
        },
        "nexonode.premium": {
          "type": "object",
          "default": {
            "enabled": false,
            "licenseKey": "",
            "autoResponse": true,
            "aiEditors": {
              "windsurf": true,
              "bolt": true,
              "lovable": true
            }
          },
          "description": "Premium features configuration"
        }
      }
    },
    "keybindings": [
      {
        "command": "nexonode.showQuickCommands",
        "key": "ctrl+shift+;",
        "mac": "cmd+shift+;",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "node-fetch": "^2.6.1",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.x",
    "@types/vscode": "^1.60.0",
    "eslint": "^8.x",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "sharp": "^0.33.5",
    "typescript": "^4.x",
    "vscode-test": "^1.5.2"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "license": "MIT"
}
